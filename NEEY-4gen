esp32_ble_tracker:
  on_ble_advertise:
    then:
      - lambda: |-
          if (x.get_name().rfind("GW-", 0) == 0) {
            ESP_LOGI("ble_adv", "NEEY detectat: %s [%s]", x.get_name().c_str(), x.address_str().c_str());
          }

